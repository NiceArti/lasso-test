{
    "manifest_version": 3,
    "name": "ChatGPT Email Monitor",
    "description": "Detects and anonymizes email addresses in ChatGPT prompts",
    "version": "1.0.0",
    "action": {
        "default_popup": "index.html"
    },
    "permissions": [
        "storage",
        "webRequest",
        "declarativeNetRequest"
    ],
    "host_permissions": [
        "*://*.chatgpt.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://chatgpt.com/*"
            ],
            "js": [
                "content-script.js"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["page-script.js"],
            "matches": ["https://chatgpt.com/*"]
        }
    ],
    "background": {
        "service_worker": "service-worker.js",
        "type": "module"
    }
}